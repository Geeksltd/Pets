@model ViewModel.PetsFormModule
<!-- «Start| PetsFormModule» -->
<form data-module="PetsFormModule" role="form" method="post" action="@Url.Current()" data-validation-style="tooltip" class="input-form">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
   <h2>Pet details</h2>
   <div class="form-body">
      <div class="form-group row required-item">
         <label for="Name" class="control-label">
            Name
         </label>
         <div class="group-control">
            <input type="text" asp-for="Name" class="form-control" autofocus="autofocus" />
         </div>
      </div>
      <div class="form-group row required-item">
         <label for="Type_Text" class="control-label">
            Type
         </label>
         <div class="group-control">
            <input type="text" asp-for="Type_Text" class="form-control auto-complete" autocomplete-source="@(Url.ActionWithQuery("PetsFormModule/TypeSource"))" autocomplete="off" />
            <input type="hidden" asp-for="Type" />
         </div>
      </div>
      <div class="form-group row required-item">
         <label for="DateOfBirth" class="control-label">
            Date of birth
         </label>
         <div class="group-control">
            <div class="input-group">
               <input type="text" asp-for="DateOfBirth" class="form-control" data-control="date-picker|time-picker" />
               <span class="input-group-addon">
                  <i title="pick a date" class="fa-calendar fa"></i>
               </span>
            </div>
         </div>
      </div>
   </div>
   <div class="buttons-row">
      <div class="buttons">
         <button type="submit" name="Save" class="btn btn-primary" formaction='@Url.ActionWithQuery("PetsFormModule/Save")' default-button="true">Save</button>
         <button type="button" name="Cancel" class="btn btn-secondary" onclick="return page.goBack(this);" data-redirect="ajax">Cancel</button>
      </div>
   </div>
</form>
<!-- «End| PetsFormModule» -->
